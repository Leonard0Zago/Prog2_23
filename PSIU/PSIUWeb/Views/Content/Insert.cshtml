@model Content

<div class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-6">
                <h1 class="m-0">
                    CADASTRO: <small>Content</small>
                </h1>
            </div>
            <div class="col-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-action="Index"
                           asp-controller="Content">
                            Listagem
                        </a>
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="container">
    <div class="row">
        <form asp-action="Insert" style="width:100%;">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" placeholder="Titulo" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="Resume" class="control-label"></label>
                        <input asp-for="Resume" class="form-control" placeholder="Resumo" />
                        <span asp-validation-for="Resume" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="HtmlContent" class="control-label"></label>
                        <input asp-for="HtmlContent" class="form-control" placeholder="Html" />
                        <span asp-validation-for="HtmlContent" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr />

            <div class="form-group">
                <input type="submit" value="Inserir"
                       class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>